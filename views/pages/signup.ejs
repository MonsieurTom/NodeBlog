<%include ../Templates/Head.ejs %>
<%include ../Templates/navbar.ejs %>

<div class="container centered-v">
    <div class="row">
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
        </div>
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 bg-light rounded p-3">
            <h2 class="w-100 p-2 text-center"><u>Sign-up</u></h2>
            <% if (error != "") { %>
                <div class="bg-danger rounded">
                    <p class="text-white text-center"><b><%= error%></b></p>
                </div>
            <% } %>
            <div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Username</label>
                    <input type="text" class="form-control" id="usernameInput" aria-describedby="emailHelp" placeholder="Username">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="passwordInput" placeholder="Password">
                    <input type="password" class="form-control mt-1" id="passwordInputConfirm" placeholder="Confirm Password">
                </div>
                <div class="float-left">
                    Already registered? <a href="/sign-in">Sign-in</a>
                </div>
                <button onclick="signUp()" class="btn btn-outline-dark float-right">Sign-up</button>
            </div>
        </div>
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
        </div>
    </div>
</div>

<%include ../Templates/footer.ejs%>
<%include ../Templates/js_includes.ejs %>
</body>
</html>